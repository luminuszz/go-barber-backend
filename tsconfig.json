{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",

    "allowJs": true,

    "outDir": "./dist",
    "rootDir": "./src",

    "strict": true,

    "strictPropertyInitialization": false,

    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@Config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "forceConsistentCasingInFileNames": true
  }
}
